<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_update"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#31414a"
    tools:context="battlemage.notes.UpdateActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <EditText
            android:id="@+id/updateTitle"
            android:layout_centerHorizontal="true"
            android:background="@drawable/borderwhite"
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <EditText
            android:id="@+id/updateNote"
            android:layout_centerHorizontal="true"
            android:background="@drawable/borderwhite"
            android:layout_below="@+id/titleEditText"
            android:layout_marginTop="30dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:scrollbars="vertical"
            android:layout_height="250dp" />


        <Button
            android:id="@+id/finalUpdate"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/wishEditText"
            android:text="Update"
            android:layout_gravity="end"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:background="@drawable/borderyellow"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
